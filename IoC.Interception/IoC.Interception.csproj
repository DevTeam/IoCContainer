<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>IoC.Features</RootNamespace>
    <TargetFrameworks>net40;net48;netstandard1.3;netstandard2.0;netcoreapp1.0;netcoreapp2.0;netcoreapp3.1</TargetFrameworks>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>DevTeam.snk</AssemblyOriginatorKeyFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <PackageId>IoC.Interception</PackageId>
    <Authors>NikolayP</Authors>
    <Description>Interception feature for expressions based Inversion of Control container for .NET.</Description>
    <PackageProjectUrl>https://github.com/DevTeam/IoCContainer/</PackageProjectUrl>
    <PackageIcon>common\icon.png</PackageIcon>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/DevTeam/IoCContainer.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>ioc container di interception proxy</PackageTags>
    <Product>IoC Container Interception feature</Product>
    <Copyright>Copyright (c) 2019 Nikolay Pianikov</Copyright>
    <DocumentationFile>..\Docs\IoC.Interception_$(TargetFramework).xml</DocumentationFile>
    <WarningsAsErrors />
    <LangVersion>7</LangVersion>
    <!--NullableContextOptions>enable</NullableContextOptions-->
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <TargetFrameworks>netstandard1.3;netstandard1.4;netstandard1.5;netstandard1.6;netstandard2.0;net40;net45;net46;net47;net48;netcoreapp1.0;netcoreapp1.1;netcoreapp2.0;netcoreapp3.0</TargetFrameworks>
    <Optimize>true</Optimize>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Castle.Core" Version="4.4.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="icon.png"><Pack>true</Pack><PackagePath>common</PackagePath></None>
    <ProjectReference Include="..\IoC\IoC.csproj" />
  </ItemGroup>

</Project>
